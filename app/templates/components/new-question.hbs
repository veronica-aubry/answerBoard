{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="title">Question</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="text">Additional Explanation</label>
          {{input value=text id="text"}}
        </div>
        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'questionFormShow'}} class="btn btn-danger btn-lg">New Question</button>
{{/if}}
